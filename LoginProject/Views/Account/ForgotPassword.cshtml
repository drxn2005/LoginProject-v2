@model NetworkCafesControllers.Models.ViewModels.Auth.ForgotPasswordViewModel

@{
    ViewData["Title"] = "استعادة كلمة المرور";
}

<div class="login-page">
    <div class="login-card">
        <div class="login-card-inner">
            <div class="row g-0" dir="rtl">

                <!-- الجزء التعريفي -->
                <div class="col-lg-5 d-none d-lg-flex flex-column justify-content-between login-hero">
                    <div>
                        <div class="login-hero-badge">
                            <span class="dot"></span>
                            <span>استعادة الوصول لحسابك</span>
                        </div>

                        <h1 class="login-hero-title">
                            نسيت كلمة المرور؟
                        </h1>
                        <p class="login-hero-sub">
                            لا تقلق، فقط أدخل بريدك الإلكتروني وسنرسل لك رابط لإعادة تعيين كلمة المرور بأمان.
                        </p>
                    </div>

                    <div class="login-hero-stats">
                        <div class="login-hero-stat">
                            <strong>آمن</strong>
                            <span>خطوات تحقق مشفرة</span>
                        </div>
                        <div class="login-hero-stat">
                            <strong>سريع</strong>
                            <span>استعادة خلال دقائق</span>
                        </div>
                    </div>
                </div>

                <!-- فورم استعادة كلمة المرور -->
                <div class="col-lg-7">
                    <div class="login-form-wrapper">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="login-logo">
                                NETWORK CAFES
                            </div>
                            <span style="font-size:.75rem;color:#9ca3af;">
                                استعادة كلمة المرور
                            </span>
                        </div>

                        <h2 class="login-title text-end">
                            استعادة كلمة المرور 🔐
                        </h2>
                        <p class="login-subtitle text-end">
                            أدخل بريدك الإلكتروني المسجّل لدينا، وسنرسل لك رابط لإعادة تعيين كلمة المرور.
                        </p>

                        <form asp-action="ForgotPassword" method="post" class="row g-3">
                            @Html.AntiForgeryToken()

                            <div asp-validation-summary="All" class="text-danger mb-2 small"></div>

                            <div class="col-12">
                                <label asp-for="Email" class="login-label"></label>
                                <input asp-for="Email"
                                       class="form-control login-input"
                                       autocomplete="email"
                                       placeholder="example@domain.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="col-12 mt-2 d-flex justify-content-between align-items-center flex-wrap gap-2">
                                <a asp-action="Login" class="login-link">
                                    رجوع لتسجيل الدخول
                                </a>

                                <button type="submit" class="btn btn-register-submit">
                                    <span>إرسال رابط الاستعادة</span>
                                    <i>➜</i>
                                </button>
                            </div>
                        </form>

                        <div class="login-footer">
                            لم يصلك البريد؟ جرّب التأكد من مجلد
                            <strong>الرسائل غير المرغوب فيها (Spam)</strong>
                            أو تأكد من صحة عنوان بريدك الإلكتروني.
                        </div>
                    </div>
                </div>

            </div> <!-- row -->
        </div> <!-- inner -->
    </div> <!-- card -->
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
