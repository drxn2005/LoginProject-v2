@using LoginProject.Models.Entities
@model List<Brand>
@{
    ViewData["Title"] = "العلامات التجارية";
}

<div class="app-surface-header d-flex flex-wrap justify-content-between align-items-center gap-2 mb-4">
    <div>
        <h5 class="mb-0">@ViewData["Title"]</h5>
        <small class="text-muted">إجمالي العلامات التجارية: @Model.Count</small>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i>
                إضافة علامة تجارية
            </a>
            <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-outline-danger">
                <i class="bi bi-shield-lock me-1"></i>
                لوحة الإدارة
            </a>
        </div>
    }
</div>

<!-- Quick Stats -->
@if (User.IsInRole("Admin"))
{
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">العلامات النشطة</h6>
                            <h3 class="mb-0">@Model.Count(b => b.IsActive)</h3>
                        </div>
                        <i class="bi bi-check-circle" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">إجمالي العلامات</h6>
                            <h3 class="mb-0">@Model.Count</h3>
                        </div>
                        <i class="bi bi-tags" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">آخر إضافة</h6>
                            @if (Model.Any())
                            {
                                <h6 class="mb-0">@Model.Last().Name</h6>
                            }
                            else
                            {
                                <h6 class="mb-0">-</h6>
                            }
                        </div>
                        <i class="bi bi-clock-history" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 bg-warning text-dark">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">حالة الحساب</h6>
                            <h6 class="mb-0">
                                @if (User.IsInRole("Admin"))
                                {
                                    <span class="badge bg-danger">مدير النظام</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">مستخدم</span>
                                }
                            </h6>
                        </div>
                        <i class="bi bi-person-badge" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (!Model.Any())
{
    <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
            <i class="bi bi-tags" style="font-size: 4rem; color: #6c757d;"></i>
            <h4 class="mt-3">لا توجد علامات تجارية</h4>
            <p class="text-muted mb-4">لم يتم إضافة أي علامات تجارية بعد.</p>

            @if (User.IsInRole("Admin"))
            {
                <div class="d-flex justify-content-center gap-3">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>
                        أضف أول علامة تجارية
                    </a>

                    <!-- زر إضافة عينة سريعة للمطورين -->
                    <form asp-action="AddSampleBrands" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-success">
                            <i class="bi bi-magic me-1"></i>
                            إضافة عينات تجريبية
                        </button>
                    </form>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    يجب أن تكون مسؤول النظام لإضافة علامات تجارية.
                </div>
            }
        </div>
    </div>
}
else
{
    <!-- Search Box -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" name="search" value="@ViewBag.Search"
                               class="form-control" placeholder="ابحث عن علامة تجارية..." />
                    </div>
                </div>
                <div class="col-md-2">
                    <select name="pageSize" class="form-select" onchange="this.form.submit()">
                        <option value="10" selected="@(ViewBag.PageSize == 10)">10</option>
                        <option value="25" selected="@(ViewBag.PageSize == 25)">25</option>
                        <option value="50" selected="@(ViewBag.PageSize == 50)">50</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search me-1"></i> بحث
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Brands Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>اسم العلامة</th>
                            <th>الوصف</th>
                            <th>الموقع</th>
                            <th>الحالة</th>
                            <th>التاريخ</th>
                            <th>العمليات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var brand = Model[i];
                            <tr>
                                <td>@(i + 1)</td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        @if (!string.IsNullOrEmpty(brand.LogoUrl))
                                        {
                                            <img src="@brand.LogoUrl" alt="@brand.Name"
                                                 style="width: 40px; height: 40px; object-fit: cover; border-radius: 5px;" />
                                        }
                                        <strong>@brand.Name</strong>
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(brand.Description))
                                    {
                                        <span class="text-muted">
                                            @(brand.Description.Length > 50 ? brand.Description.Substring(0, 50) + "..." : brand.Description)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">لا يوجد وصف</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(brand.Website))
                                    {
                                        <a href="@brand.Website" target="_blank" class="text-decoration-none">
                                            <i class="bi bi-link-45deg"></i> زيارة
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (brand.IsActive)
                                    {
                                        <span class="badge bg-success">نشط</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">غير نشط</span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @brand.CreatedAt.ToString("yyyy-MM-dd")
                                    </small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@brand.Id"
                                           class="btn btn-outline-info" title="تفاصيل">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@brand.Id"
                                               class="btn btn-outline-primary" title="تعديل">
                                                <i class="bi bi-pencil"></i>
                                            </a>

                                            <button type="button" class="btn btn-outline-danger"
                                                    data-bs-toggle="modal" data-bs-target="#deleteModal@(brand.Id)"
                                                    title="حذف">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </div>

                                    <!-- Delete Modal -->
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <div class="modal fade" id="deleteModal@(brand.Id)" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">تأكيد الحذف</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        هل أنت متأكد من حذف العلامة التجارية <strong>@brand.Name</strong>؟
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                                                        <form asp-action="Delete" method="post">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="id" value="@brand.Id" />
                                                            <button type="submit" class="btn btn-danger">حذف</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.Count == 0)
            {
                <div class="text-center py-4">
                    <i class="bi bi-search" style="font-size: 3rem; color: #6c757d;"></i>
                    <p class="mt-2">لم يتم العثور على نتائج</p>
                </div>
            }
        </div>
    </div>
}

<!-- Admin Panel Button (Floating) -->
@if (User.IsInRole("Admin"))
{
    <div class="position-fixed" style="bottom: 80px; left: 20px; z-index: 1000;">
        <a asp-area="Admin" asp-controller="Users" asp-action="Index"
           class="btn btn-danger btn-lg rounded-pill shadow-lg d-flex align-items-center gap-2 px-4">
            <i class="bi bi-shield-lock"></i>
            <span>لوحة الإدارة</span>
        </a>
    </div>
}