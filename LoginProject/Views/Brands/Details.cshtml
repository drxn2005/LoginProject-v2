@using LoginProject.Models.ViewModels

@{
    ViewData["Title"] = "تفاصيل العلامة التجارية";
}

<div class="card shadow-sm">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0">
            <i class="bi bi-info-circle me-2"></i>
            تفاصيل العلامة التجارية
        </h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">اسم العلامة:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">الوصف:</dt>
            <dd class="col-sm-9">@(Model.Description ?? "لا يوجد وصف")</dd>

            <dt class="col-sm-3">تاريخ الإنشاء:</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy/MM/dd")</dd>

            @if (!string.IsNullOrEmpty(Model.LogoUrl))
            {
                <dt class="col-sm-3">الشعار:</dt>
                <dd class="col-sm-9">
                    <img src="@Model.LogoUrl" alt="@Model.Name" class="img-thumbnail" style="max-width: 200px;" />
                </dd>
            }
        </dl>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil me-1"></i>
                تعديل
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-right me-1"></i>
                العودة للقائمة
            </a>
        </div>
    </div>
</div>