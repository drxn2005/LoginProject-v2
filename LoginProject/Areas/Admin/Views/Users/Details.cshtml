@using LoginProject.Models.ViewModels.Admin
@model UserViewModel
@{
    ViewData["Title"] = "تفاصيل المستخدم";
}

<div class="app-surface-header d-flex flex-wrap justify-content-between align-items-center gap-2 mb-4">
    <div>
        <h5 class="mb-0">@ViewData["Title"]</h5>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-right me-1"></i> رجوع
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">اسم المستخدم</label>
                        <p class="form-control-plaintext">@Model.UserName</p>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">البريد الإلكتروني</label>
                        <p class="form-control-plaintext">@Model.Email</p>
                        @if (Model.EmailConfirmed)
                        {
                            <span class="badge bg-success">مفعل</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">غير مفعل</span>
                        }
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">رقم الهاتف</label>
                        <p class="form-control-plaintext">@Model.PhoneNumber</p>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">حالة الحساب</label>
                        <p>
                            @if (Model.IsLockedOut)
                            {
                                <span class="badge bg-danger">محظور</span>
                                <br />
                                <small class="text-muted">
                                    حتى: @Model.LockoutEnd?.ToString("yyyy-MM-dd HH:mm")
                                </small>
                            }
                            else
                            {
                                <span class="badge bg-success">نشط</span>
                            }
                        </p>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">الأدوار</label>
                        <p>
                            @foreach (var role in Model.Roles)
                            {
                                <span class="badge @(role == "Admin" ? "bg-danger" : "bg-secondary") me-1">@role</span>
                            }
                        </p>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">محاولات الفشل</label>
                        <p>@Model.AccessFailedCount</p>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">تاريخ التسجيل</label>
                        <p class="form-control-plaintext">@Model.RegistrationDate.ToString("yyyy-MM-dd HH:mm")</p>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">آخر تسجيل دخول</label>
                        <p class="form-control-plaintext">
                            @if (Model.LastLoginDate.HasValue)
                            {
                                @Model.LastLoginDate.Value.ToString("yyyy-MM-dd HH:mm")
                            }
                            else
                            {
                                <span class="text-muted">لا يوجد</span>
                            }
                        </p>
                    </div>
                </div>
                
                <div class="d-flex gap-2 mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="bi bi-pencil me-1"></i> تعديل
                    </a>
                    
                    @if (Model.IsLockedOut)
                    {
                        <form asp-action="Unlock" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-unlock me-1"></i> فتح الحساب
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="Lock" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="lockoutHours" value="1" />
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-lock me-1"></i> قفل لمدة ساعة
                            </button>
                        </form>
                    }
                    
                    <a asp-action="ResetPassword" asp-route-id="@Model.Id" class="btn btn-secondary">
                        <i class="bi bi-key me-1"></i> إعادة تعيين كلمة المرور
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent">
                <h6 class="mb-0">إجراءات سريعة</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary text-start">
                        <i class="bi bi-pencil me-2"></i> تعديل البيانات
                    </a>
                    
                    <a asp-area="Admin" asp-action="ResetPassword" asp-route-id="@Model.Id" class="btn btn-outline-secondary text-start">
                        <i class="bi bi-key me-2"></i> تغيير كلمة المرور
                    </a>
                    
                    @if (Model.IsLockedOut)
                    {
                        <form asp-action="Unlock" method="post" class="d-grid">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-outline-success text-start">
                                <i class="bi bi-unlock me-2"></i> فتح الحساب
                            </button>
                        </form>
                    }
                    else
                    {
                        <button type="button" class="btn btn-outline-warning text-start" 
                                data-bs-toggle="modal" data-bs-target="#lockModal">
                            <i class="bi bi-lock me-2"></i> قفل الحساب
                        </button>
                    }
                    
                    <button type="button" class="btn btn-outline-danger text-start" 
                            data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash me-2"></i> حذف المستخدم
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Lock Modal -->
<div class="modal fade" id="lockModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">قفل الحساب</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="d-grid gap-2">
                    <form asp-action="Lock" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <input type="hidden" name="lockoutHours" value="1" />
                        <button type="submit" class="btn btn-warning w-100 text-start">
                            <i class="bi bi-clock me-2"></i>قفل لمدة ساعة
                        </button>
                    </form>
                    
                    <form asp-action="Lock" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <input type="hidden" name="lockoutHours" value="24" />
                        <button type="submit" class="btn btn-warning w-100 text-start">
                            <i class="bi bi-calendar-day me-2"></i>قفل لمدة يوم
                        </button>
                    </form>
                    
                    <form asp-action="Lock" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <input type="hidden" name="lockoutHours" value="" />
                        <button type="submit" class="btn btn-danger w-100 text-start">
                            <i class="bi bi-ban me-2"></i>قفل دائم
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">تأكيد الحذف</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>هل أنت متأكد من حذف المستخدم <strong>@Model.UserName</strong>؟</p>
                <p class="text-danger small"><i class="bi bi-exclamation-triangle"></i> هذا الإجراء لا يمكن التراجع عنه.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">حذف</button>
                </form>
            </div>
        </div>
    </div>
</div>