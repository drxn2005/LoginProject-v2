@model List<UserViewModel>
@{
    ViewData["Title"] = "إدارة المستخدمين";
}

<div class="app-surface-header d-flex flex-wrap justify-content-between align-items-center gap-2 mb-4">
    <div>
        <h5 class="mb-0">@ViewData["Title"]</h5>
        <small class="text-muted">إجمالي المستخدمين: @ViewBag.TotalCount</small>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>
            مستخدم جديد
        </a>
        <a asp-area="" asp-controller="Brands" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-right me-1"></i>
            العلامات التجارية
        </a>
    </div>
</div>

<!-- Search -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-8">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" name="search" value="@ViewBag.Search"
                           class="form-control" placeholder="ابحث باسم المستخدم أو البريد..." />
                </div>
            </div>
            <div class="col-md-2">
                <select name="pageSize" class="form-select" onchange="this.form.submit()">
                    <option value="10" selected="@(ViewBag.PageSize == 10)">10</option>
                    <option value="25" selected="@(ViewBag.PageSize == 25)">25</option>
                    <option value="50" selected="@(ViewBag.PageSize == 50)">50</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search me-1"></i> بحث
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Users Table -->
<div class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>اسم المستخدم</th>
                        <th>البريد الإلكتروني</th>
                        <th>رقم الهاتف</th>
                        <th>الأدوار</th>
                        <th>الحالة</th>
                        <th>التسجيل</th>
                        <th>العمليات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <div class="avatar-placeholder rounded-circle bg-primary text-white d-flex align-items-center justify-content-center"
                                         style="width: 36px; height: 36px;">
                                        @user.UserName[0]
                                    </div>
                                    <div>
                                        <strong>@user.UserName</strong>
                                        <div class="small text-muted">ID: @user.Id.Substring(0, 8)...</div>
                                    </div>
                                </div>
                            </td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>
                                @foreach (var role in user.Roles)
                                {
                                    <span class="badge @(role == "Admin" ? "bg-danger" : "bg-secondary") me-1">@role</span>
                                }
                            </td>
                            <td>
                                @if (user.IsLockedOut)
                                {
                                    <span class="badge bg-danger">محظور</span>
                                    <br />
                                    <small class="text-muted">@user.LockoutEnd?.ToString("yyyy-MM-dd HH:mm")</small>
                                }
                                else if (user.EmailConfirmed)
                                {
                                    <span class="badge bg-success">نشط</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">غير مفعل</span>
                                }
                            </td>
                            <td>
                                <small class="text-muted">
                                    @user.RegistrationDate.ToString("yyyy-MM-dd")
                                </small>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@user.Id"
                                       class="btn btn-outline-info" title="تفاصيل">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@user.Id"
                                       class="btn btn-outline-primary" title="تعديل">
                                        <i class="bi bi-pencil"></i>
                                    </a>

                                    @if (user.IsLockedOut)
                                    {
                                        <form asp-action="Unlock" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@user.Id" />
                                            <button type="submit" class="btn btn-outline-success" title="فتح الحساب">
                                                <i class="bi bi-unlock"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-outline-warning dropdown-toggle"
                                                data-bs-toggle="dropdown" title="قفل الحساب">
                                            <i class="bi bi-lock"></i>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <form asp-action="Lock" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@user.Id" />
                                                    <input type="hidden" name="lockoutHours" value="1" />
                                                    <button type="submit" class="dropdown-item">
                                                        <i class="bi bi-clock me-2"></i>قفل لمدة ساعة
                                                    </button>
                                                </form>
                                            </li>
                                            <li>
                                                <form asp-action="Lock" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@user.Id" />
                                                    <input type="hidden" name="lockoutHours" value="24" />
                                                    <button type="submit" class="dropdown-item">
                                                        <i class="bi bi-calendar-day me-2"></i>قفل لمدة يوم
                                                    </button>
                                                </form>
                                            </li>
                                            <li>
                                                <form asp-action="Lock" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@user.Id" />
                                                    <input type="hidden" name="lockoutHours" value="" />
                                                    <button type="submit" class="dropdown-item text-danger">
                                                        <i class="bi bi-ban me-2"></i>قفل دائم
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    }

                                    <a asp-action="ResetPassword" asp-route-id="@user.Id"
                                       class="btn btn-sm btn-warning" title="إعادة تعيين كلمة المرور">
                                        <i class="bi bi-key"></i>
                                    </a>

                                    <button type="button" class="btn btn-outline-danger"
                                            data-bs-toggle="modal" data-bs-target="#deleteModal@(user.Id)"
                                            title="حذف">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>

                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteModal@(user.Id)" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">تأكيد الحذف</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>هل أنت متأكد من حذف المستخدم <strong>@user.UserName</strong>؟</p>
                                                <p class="text-danger small"><i class="bi bi-exclamation-triangle"></i> هذا الإجراء لا يمكن التراجع عنه.</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                                                <form asp-action="Delete" method="post">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@user.Id" />
                                                    <button type="submit" class="btn btn-danger">حذف</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation" class="mt-4">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@i"
                               asp-route-pageSize="@ViewBag.PageSize"
                               asp-route-search="@ViewBag.Search">
                                @i
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }

        <!-- Statistics -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card border-0 bg-primary text-white">
                    <div class="card-body">
                        <h6 class="mb-0">المستخدمين النشطين</h6>
                        <h3 class="mb-0">@Model.Count(u => !u.IsLockedOut && u.EmailConfirmed)</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 bg-success text-white">
                    <div class="card-body">
                        <h6 class="mb-0">المسؤولين</h6>
                        <h3 class="mb-0">@Model.Count(u => u.Roles.Contains("Admin"))</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 bg-warning text-dark">
                    <div class="card-body">
                        <h6 class="mb-0">الحسابات المحظورة</h6>
                        <h3 class="mb-0">@Model.Count(u => u.IsLockedOut)</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 bg-info text-white">
                    <div class="card-body">
                        <h6 class="mb-0">المستخدمين العاديين</h6>
                        <h3 class="mb-0">@Model.Count(u => u.Roles.Contains("User") && !u.Roles.Contains("Admin"))</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-placeholder {
        font-weight: bold;
        text-transform: uppercase;
    }
</style>