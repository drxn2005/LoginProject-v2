@using NetworkCafesControllers.Models.ViewModels.Admin
@model List<UserViewModel>
@{
    ViewData["Title"] = "إدارة المستخدمين";
}

<div class="app-surface-header d-flex flex-wrap justify-content-between align-items-center gap-2 mb-4">
    <div>
        <h5 class="mb-0">@ViewData["Title"]</h5>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>
            مستخدم جديد
        </a>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <!-- Search -->
        <form method="get" class="row g-3 mb-4">
            <div class="col-md-8">
                <input type="text" name="search" value="@ViewBag.Search"
                       class="form-control" placeholder="بحث بالاسم أو البريد أو الهاتف..." />
            </div>
            <div class="col-md-2">
                <select name="pageSize" class="form-select" onchange="this.form.submit()">
                    <option value="10" selected="@(ViewBag.PageSize == 10)">10</option>
                    <option value="25" selected="@(ViewBag.PageSize == 25)">25</option>
                    <option value="50" selected="@(ViewBag.PageSize == 50)">50</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-outline-primary w-100">
                    <i class="bi bi-search me-1"></i> بحث
                </button>
            </div>
        </form>

        <!-- Users Table -->
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>اسم المستخدم</th>
                        <th>البريد الإلكتروني</th>
                        <th>رقم الهاتف</th>
                        <th>الأدوار</th>
                        <th>الحالة</th>
                        <th>التسجيل</th>
                        <th>العمليات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <strong>@user.UserName</strong>
                                @if (user.IsLockedOut)
                                {
                                    <span class="badge bg-danger ms-1">محظور</span>
                                }
                                @if (!user.EmailConfirmed)
                                {
                                    <span class="badge bg-warning ms-1">غير مفعل</span>
                                }
                            </td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>
                                @foreach (var role in user.Roles)
                                {
                                    <span class="badge bg-secondary me-1">@role</span>
                                }
                            </td>
                            <td>
                                @if (user.IsLockedOut)
                                {
                                    <small class="text-danger">محظور حتى @user.LockoutEnd?.ToString("yyyy-MM-dd HH:mm")</small>
                                }
                                else
                                {
                                    <span class="text-success">نشط</span>
                                }
                            </td>
                            <td>
                                <small class="text-muted">
                                    @user.RegistrationDate.ToString("yyyy-MM-dd")
                                </small>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@user.Id"
                                       class="btn btn-outline-info" title="تفاصيل">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@user.Id"
                                       class="btn btn-outline-primary" title="تعديل">
                                        <i class="bi bi-pencil"></i>
                                    </a>

                                    @if (user.IsLockedOut)
                                    {
                                        <form asp-action="Unlock" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@user.Id" />
                                            <button type="submit" class="btn btn-outline-success"
                                                    title="فتح الحساب">
                                                <i class="bi bi-unlock"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-outline-warning dropdown-toggle"
                                                    data-bs-toggle="dropdown" title="قفل الحساب">
                                                <i class="bi bi-lock"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <form asp-action="Lock" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@user.Id" />
                                                        <input type="hidden" name="lockoutHours" value="1" />
                                                        <button type="submit" class="dropdown-item">
                                                            <i class="bi bi-clock me-2"></i>قفل لمدة ساعة
                                                        </button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form asp-action="Lock" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@user.Id" />
                                                        <input type="hidden" name="lockoutHours" value="24" />
                                                        <button type="submit" class="dropdown-item">
                                                            <i class="bi bi-calendar-day me-2"></i>قفل لمدة يوم
                                                        </button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form asp-action="Lock" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@user.Id" />
                                                        <input type="hidden" name="lockoutHours" value="" />
                                                        <button type="submit" class="dropdown-item text-danger">
                                                            <i class="bi bi-ban me-2"></i>قفل دائم
                                                        </button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    }

                                    <a asp-action="ResetPassword" asp-route-id="@user.Id"
                                       class="btn btn-outline-secondary" title="إعادة تعيين كلمة المرور">
                                        <i class="bi bi-key"></i>
                                    </a>

                                    <button type="button" class="btn btn-outline-danger"
                                            data-bs-toggle="modal" data-bs-target="#deleteModal@(user.Id)"
                                            title="حذف">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>

                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteModal@(user.Id)" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">تأكيد الحذف</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                هل أنت متأكد من حذف المستخدم <strong>@user.UserName</strong>؟
                                                <br><small class="text-muted">هذا الإجراء لا يمكن التراجع عنه.</small>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                                                <form asp-action="Delete" method="post">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@user.Id" />
                                                    <button type="submit" class="btn btn-danger">حذف</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mt-4">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@i"
                               asp-route-pageSize="@ViewBag.PageSize"
                               asp-route-search="@ViewBag.Search">
                                @i
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>